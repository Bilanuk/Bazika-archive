document.getElementsByClassName('alert-body')[0].innerHTML = "<%= j render 'shared/alert' %>";

elements = document.getElementsByClassName('status_button');
for (var i = 0; i < elements.length; i++) {
    elements[i].style.backgroundColor = null;
    elements[i].classList.remove('status_button_active');
}

var status = '<%= @status %>';
var button = document.getElementById(status);
if (button != null) {
    button.style.backgroundColor = 'gray';
    button.classList.add('status_button_active');
}
