document.getElementsByClassName('alert-body')[0].innerHTML = "<%= j render 'shared/alert' %>";

var button = document.querySelector('#fav_ico');
toggle(button);

function toggle(el) {
    if (<%= @is_favourite %> == true) {
        el.style.backgroundColor = 'green';
    }
    else {
        el.style.backgroundColor = null;
    }
}